{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./build/npm/dist",
    "target": "es2017"
  },
  "include": ["src", "src/@types"],
  "exclude": ["**/*.test.*", "__tests__"]
}
